<!DOCTYPE html>
<html>
<head>
  <title>Foundation</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body data-spy='scroll'>

  <nav class="navbar navbar-default navbar-fixed-top navbar-height navbar-styled" id="homepage-navbar">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle na.navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#" class="navbar-right-link">Applicants</a></li>
          <li><a href="#" class="navbar-right-link">Students</a></li>
          <li><a href="#" class="navbar-right-link">Parents</a></li>
          <li><a href="#" class="navbar-right-link">Alumni</a></li>
          <li><a href="#" class="navbar-right-link">Sponsors</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= yield %>

</body>
</html>

<script>
  $(document).ready(function(){
    var is_transparent_now = true;

    $(window).scroll(function(){
      if( $(window).scrollTop() < 15 && !is_transparent_now){
        is_transparent_now = true;
        $(".navbar-right-link").animate({
          color: $.Color(255, 255, 255, 0.75)
        }, 500);
        $("#homepage-navbar").animate({
          backgroundColor: $.Color(255, 255, 255, 0)
        }, 500);
      }
      else if ( $(window).scrollTop() >= 15 && is_transparent_now )
      {
        is_transparent_now = false;
        $(".navbar-right-link").animate({
          color: $.Color(0, 0, 0, 0.7)
        }, 500);
        $("#homepage-navbar").animate({
          backgroundColor: $.Color(255, 255, 255, 0.95)
        }, 500);
      }
    })
  });
</script>
